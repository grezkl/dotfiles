volume master {
    # format = "â™ª: %volume"
    # format_muted = "â™ª: muted (%volume)"
    # format_muted = "VOL: muted (%volume)"
    device = "default"
        format = "VOL:%volume"
    # device = "pulse:0"
        mixer = "Master"
        mixer_idx = 0
}

wireless wlp1s0 {
# wireless wlp2s0 {
# format_up = "wlp:(%quality at %essid )%ip"
    # format_up = "w*:(%quality at %essid )%ip"
    format_up = "W:%ip%quality"
        format_down = "W"
}

ethernet enp0s31f6 {
# format_up = "enp:%ip(%speed)"
    format_up = "E:%ip"
        format_down = "E"
}

disk "/" {
    format = "%avail"
}

load {
    format = "%1min"
}

cpu_usage {
    format = "<span color='#00bbff'>CPU:%usage</span>"
# format = "<span color='#00bbff'>CPU:%usage|%cpu0/%cpu1/%cpu2/%cpu3/%cpu4/%cpu5/%cpu6/%cpu7</span>"
}

memory {
# format = "%used | %available"
    format = "<span color='#f67400'>MEM:%used</span>"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

cpu_temperature 0 {
    format = "%degreesÂ°C"
        max_threshold = 85
        path = "/sys/class/thermal/thermal_zone0/temp"
}

